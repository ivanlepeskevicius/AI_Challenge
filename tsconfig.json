{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",                                 
    "lib": ["es5", "dom"],
    "types": ["cypress", "node", "cypress-wait-until"], 

    /* Modules */
    "module": "commonjs",                                

    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["**/*.ts"]
}
